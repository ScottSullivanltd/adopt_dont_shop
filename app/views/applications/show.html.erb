<br>
<p><h2><%= @application.name %></h2></p>
<p><%= @application.street_address %></p>
<%= @application.city %>
<%= @application.state %>
<%= @application.zipcode %>

<p><h3>Application Status: <%= @application.status %></h3></p>

<div>
  <h3>Add a Pet to this Application</h3>
  <%= form_with url: "/applications/#{@application.id}?search=search", method: :get, local: true do |f| %>
    <%= f.label :search, "Pet Name:" %>
    <%= f.text_field :search %>
    <%= f.submit "Search" %>
  <% end %>

  <h4>Pets in Application:</h4>
  <% if @pets.present? %>
    <% @pets.each do |pet| %>
      <p><h4><%= pet.name %></h4></p>
    <% end %>
  <% end %>
</div>
