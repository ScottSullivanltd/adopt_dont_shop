<h1>Pet Adoption Application</h1>
<%= form_with url: "/applications/#{@application.id}", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street, 'Street Address' %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip_code, 'Zip Code' %>
  <%= f.number_field :zip_code %>

  <%= f.submit 'Submit'%>
<% end %>
